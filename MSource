○パラメーターの追加方法
○使いやすいパラメーター型の調査
○buttonの関数の呼び出し方


global proc transBox()
{
	
	string $name[];	
	$name = 'sphere';
	int $float initValue = 'floatSliderGrp -q -value init';
	int $float deltaValue = 'floatSliderGrp -q -value delta';
	int $float timeValue = 'floatSliderGrp -q -value time';
	
	$name = 'sphere';
	setAttr($name[0] + ".tx") $init;
	
	for($i = 0; $i < $timeValue; $i++)
	{
		currentTime $i;
		setAttr ($name[0] + ".rx") $deltaValue * $i / $timeValue;
		setKeyframe -at "ry" $name[0];
	}
}

window -title "Transform";
columnLayout;
text -label "立方体を移動";

floatSliderGrp -label "初期値" -field true -min 0.0 -max 20.0 -step 0.1 -value 0.0 init;
floatSliderGrp -label "経過値" -field true -min 0.0 -max 20.0 -step 0.1 -value 0.0 delta;
floatSliderGrp -label "経過時間" -field true -min 0.0 -max 20.0 -step 0.1 -value 0.0 time;

button -label "On" -command "transBox()";
showWindow;
