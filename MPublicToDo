■Cave
○凹凸の表現を詰める
・Noise値の保管の処理をなくす

○Assetの調整周りの処理を実装

//回転周りの調整
matrix m_rotate = ident();
vector asset_rotate = point(1, "Rotate", selected_asset_ref_index);
vector rotate_axis = set(1,0,0);
vector4 q_rotate = quaternion(radians(asset_rotate.x) ,rotate_axis);
m_rotate *= qconvert(q_rotate);
rotate_axis = set(0,1,0);
q_rotate = quaternion(radians(asset_rotate.y) ,rotate_axis);
m_rotate *= qconvert(q_rotate);
rotate_axis = set(0,0,1);
q_rotate = quaternion(radians(asset_rotate.z) ,rotate_axis);
m_rotate *= qconvert(q_rotate);    
v@N *= m_rotate;

//移動周り    
vector transform = point(1, "Transform", selected_asset_ref_index);
vector x_axis_vector = {0, 0, 1};
vector4 q_rotate = dihedral(x_axis_vector, v@N);
m_rotate *= qconvert(q_rotate);
transform *= m_rotate;
v@P += transform;

//サイズ周り
vector scale = point(2, "Size", selected_asset_ref_index);
v@scale *= scale;


